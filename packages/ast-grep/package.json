{
	"name": "@op1/ast-grep",
	"version": "0.3.0",
	"description": "AST-aware code search and replace tools for OpenCode - powered by ast-grep",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "bun build src/index.ts --outfile dist/index.js --target bun --format esm",
		"typecheck": "tsc --noEmit",
		"dev": "bun run build --watch"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@opencode-ai/plugin": "^1.0.0",
		"@ast-grep/cli": "^0.40.0"
	},
	"devDependencies": {
		"@types/bun": "^1.1.0",
		"typescript": "^5.7.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/op1/op1.git",
		"directory": "packages/ast-grep"
	},
	"license": "MIT",
	"keywords": [
		"opencode",
		"plugin",
		"ast-grep",
		"ast",
		"code-search",
		"refactoring"
	]
}
