{
	"name": "@op1/install",
	"version": "0.3.1",
	"description": "Interactive CLI installer for op1 - OpenCode harness with batteries included",
	"type": "module",
	"bin": {
		"op1-install": "./bin/cli.js"
	},
	"main": "dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "bun build src/index.ts --outfile dist/index.js --target bun --format esm && bun build bin/cli.ts --outfile bin/cli.js --target bun --format esm",
		"typecheck": "tsc --noEmit",
		"dev": "bun run build --watch"
	},
	"files": [
		"bin",
		"dist",
		"templates"
	],
	"dependencies": {
		"@clack/prompts": "^0.9.1",
		"picocolors": "^1.1.1"
	},
	"devDependencies": {
		"@types/bun": "^1.1.0",
		"typescript": "^5.7.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/op1/op1.git",
		"directory": "packages/install"
	},
	"license": "MIT",
	"keywords": [
		"opencode",
		"cli",
		"installer",
		"scaffolding"
	]
}
