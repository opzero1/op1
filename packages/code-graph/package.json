{
	"name": "@op1/code-graph",
	"version": "0.3.1",
	"description": "Dependency graph plugin for OpenCode - import/export analysis, call hierarchies, impact analysis",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "bun build src/index.ts --outfile dist/index.js --target bun --format esm",
		"typecheck": "tsc --noEmit",
		"dev": "bun run build --watch"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@opencode-ai/plugin": "^1.0.0"
	},
	"devDependencies": {
		"@types/bun": "^1.1.0",
		"typescript": "^5.7.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/op1/op1.git",
		"directory": "packages/code-graph"
	},
	"license": "MIT",
	"keywords": [
		"opencode",
		"plugin",
		"dependency-graph",
		"code-analysis",
		"impact-analysis"
	]
}
