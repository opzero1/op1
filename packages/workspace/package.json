{
	"name": "@op1/workspace",
	"version": "0.3.0",
	"description": "Project-scoped plan management plugin for OpenCode - plans, notepads, verification hooks",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "bun build src/index.ts --outfile dist/index.js --target bun --format esm --external zod",
		"typecheck": "tsc --noEmit",
		"dev": "bun run build --watch"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@opencode-ai/plugin": "^1.0.0",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@types/bun": "^1.1.0",
		"typescript": "^5.7.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/op1/op1.git",
		"directory": "packages/workspace"
	},
	"license": "MIT",
	"keywords": [
		"opencode",
		"plugin",
		"plans",
		"workspace"
	]
}
